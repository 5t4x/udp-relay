<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:contentDescription="@string/smiley_icon_content"
        app:srcCompat="@drawable/smiley_icon" />

    <Button
        android:id="@+id/btnStartService"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/service_start" />

    <Button
        android:id="@+id/btnStopService"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/service_stop" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="34dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputRelayLayout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="@string/label_relay"
        app:errorEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputRelay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="6dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputRemoteLayout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="@string/label_remote">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputRemote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>